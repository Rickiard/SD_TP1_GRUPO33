<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OceanDashboard</title>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OceanDashboard.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fc;
        }
        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border-radius: 0.5rem;
            overflow: hidden;
            border: none;
        }
        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
        }
        .navbar {
            background-color: white !important;
            box-shadow: 0 0.125rem 0.25rem 0 rgba(58, 59, 69, 0.2);
        }
        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }        .dashboard-chart {
            height: 250px;
        }
        .comparison-chart {
            height: 400px;
        }
        .bg-primary {
            background-color: #4e73df !important;
        }
        .bg-success {
            background-color: #1cc88a !important;
        }
        .bg-info {
            background-color: #36b9cc !important;
        }
        .bg-warning {
            background-color: #f6c23e !important;
        }.intensity-bar {
            display: inline-block;
            width: 8px;
            height: 16px;
            background-color: #4e73df;
            margin-right: 2px;
            border-radius: 2px;
        }
        .severity-indicator {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: bold;
            color: white;
        }
        .severity-indicator.low {
            background-color: #1cc88a;
        }
        .severity-indicator.moderate-low {
            background-color: #36b9cc;
        }
        .severity-indicator.moderate {
            background-color: #f6c23e;
        }
        .severity-indicator.moderate-high {
            background-color: #fd7e14;
        }
        .severity-indicator.high {
            background-color: #e74a3b;
        }
        
        /* Chart Card Border Styles */
        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }
        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }
        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }
        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }
        .border-left-danger {
            border-left: 0.25rem solid #e74a3b !important;
        }
        
        /* Text colors for consistency */
        .text-primary {
            color: #4e73df !important;
        }
        .text-success {
            color: #1cc88a !important;
        }
        .text-info {
            color: #36b9cc !important;
        }
        .text-warning {
            color: #f6c23e !important;
        }
        .text-danger {
            color: #e74a3b !important;
        }</style>
</head>
<body>
    
    @RenderBody()
    <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Ocean Dashboard - Sistema de Monitoramento Oceânico
        </div>
    </footer>    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
    <script src="https://cdn.plot.ly/plotly-2.27.0.min.js"></script>
    <script src="~/js/site_charts_simple.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
