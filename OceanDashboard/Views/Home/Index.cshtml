@model OceanDashboard.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Oceânico";
}

<div class="dashboard-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="hero-title">
                        <i class="bi bi-water text-primary me-3"></i>
                        Dashboard Oceânico
                    </h1>
                    <p class="hero-subtitle">Monitoramento em tempo real dos dados oceanográficos</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="status-indicator">
                        <span class="status-dot online"></span>
                        <span class="status-text">Sistema Online</span>
                    </div>
                </div>
            </div>
        </div>
    </div><div class="container-fluid" style="padding-top: 2rem;">
        <!-- Filters Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card filters-card shadow-lg border-0">
                    <div class="card-header bg-gradient-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0" style="color:black">
                                <i class="bi bi-funnel me-2"></i>
                                Filtros de Dados
                            </h5>
                            <div class="filter-status">
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-activity me-1"></i>
                                    Dados em Tempo Real
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <form id="dashboardFilters" method="get" asp-controller="Home" asp-action="Index" class="filters-form">
                            <div class="row g-4 align-items-end">
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group">
                                        <label for="timeRange" class="form-label fw-semibold text-primary">
                                            <i class="bi bi-clock me-2"></i>Período de Tempo
                                        </label>
                                        <select id="timeRange" name="timeRange" class="form-select modern-select" asp-for="TimeRange">
                                            <option value="1h">Última hora</option>
                                            <option value="6h">Últimas 6 horas</option>
                                            <option value="24h">Últimas 24 horas</option>
                                            <option value="7d">Últimos 7 dias</option>
                                            <option value="30d">Últimos 30 dias</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="form-group">
                                        <label for="stationId" class="form-label fw-semibold text-primary">
                                            <i class="bi bi-geo-alt me-2"></i>Estação
                                        </label>
                                        <select id="stationId" name="stationId" class="form-select modern-select" asp-for="StationId">
                                            <option value="all">Todas as estações</option>
                                            @foreach (var station in Model.AvailableStations)
                                            {
                                                <option value="@station">@station</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-6">
                                    <div class="form-group">
                                        <label for="resolution" class="form-label fw-semibold text-primary">
                                            <i class="bi bi-graph-up me-2"></i>Resolução
                                        </label>
                                        <select id="resolution" name="resolution" class="form-select modern-select" asp-for="Resolution">
                                            <option value="raw">Brutos</option>
                                            <option value="minute">Minuto</option>
                                            <option value="hour">Hora</option>
                                            <option value="day">Dia</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-6">
                                    <div class="form-group">
                                        <label for="analysisType" class="form-label fw-semibold text-primary">
                                            <i class="bi bi-cpu me-2"></i>Análise
                                        </label>
                                        <select id="analysisType" name="analysisType" class="form-select modern-select" asp-for="AnalysisType">
                                            <option value="none">Sem análise</option>
                                            <option value="all">Completa</option>
                                            <option value="wave">Ondas</option>
                                            <option value="wind">Ventos</option>
                                            <option value="temperature">Temperatura</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-12">
                                    <div class="form-group">
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-primary btn-modern">
                                                <i class="bi bi-search me-2"></i>Aplicar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Action Buttons Row -->
                            <div class="row mt-4">
                                <div class="col-12">                                    <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center">
                                        <div class="action-buttons">
                                            <button type="button" id="refreshData" class="btn btn-success btn-modern">
                                                <i class="bi bi-arrow-clockwise me-2"></i>Atualizar
                                            </button>
                                        </div>
                                        <div class="last-update-info">
                                            <small class="text-muted d-flex align-items-center">
                                                <i class="bi bi-clock-history me-2"></i>
                                                Última atualização: <span id="lastUpdateTime" class="fw-semibold ms-1">--:--</span>
                                            </small>
                                        </div>                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div><!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-white text-dark h-100 shadow-sm border-left-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Altura das Ondas</h6>
                            <h2 class="card-title mb-0 text-primary">@Model.Summary.AverageWaveHeight.ToString("F1") m</h2>
                        </div>
                        <div class="fs-1 text-primary opacity-25">
                            <i class="bi bi-water"></i>
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-between">
                        <small>Máx: <span class="text-primary fw-bold">@Model.Summary.MaxWaveHeight.ToString("F1") m</span></small>
                        <small>Mediana: <span class="text-primary">@Model.Summary.MedianWaveHeight.ToString("F1") m</span></small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-white text-dark h-100 shadow-sm border-left-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Temperatura do Mar</h6>
                            <h2 class="card-title mb-0 text-success">@Model.Summary.AverageSeaTemperature.ToString("F1") °C</h2>
                        </div>
                        <div class="fs-1 text-success opacity-25">
                            <i class="bi bi-thermometer-half"></i>
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-between">
                        <small>Min: <span class="text-success">@Model.Summary.MinSeaTemperature.ToString("F1") °C</span></small>
                        <small>Max: <span class="text-success fw-bold">@Model.Summary.MaxSeaTemperature.ToString("F1") °C</span></small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-white text-dark h-100 shadow-sm border-left-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Velocidade do Vento</h6>
                            <h2 class="card-title mb-0 text-warning">@Model.Summary.AverageWindSpeed.ToString("F1") nós</h2>
                        </div>
                        <div class="fs-1 text-warning opacity-25">
                            <i class="bi bi-wind"></i>
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-between">
                        <small>Máx: <span class="text-warning fw-bold">@Model.Summary.MaxWindSpeed.ToString("F1") nós</span></small>
                        <small>StdDev: <span class="text-warning">@Model.Summary.WindSpeedStdDev.ToString("F2")</span></small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-white text-dark h-100 shadow-sm border-left-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Direção do Vento</h6>
                            <h2 class="card-title mb-0 text-info">@Model.Summary.MostCommonWindDirection</h2>
                        </div>
                        <div class="fs-1 text-info opacity-25">
                            <i class="bi bi-compass"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small>Dados: <span class="text-info">@Model.Summary.DataPointsCount pontos</span> de <span class="text-info">@Model.Summary.StationsCount estações</span></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <!-- Main Content Tabs -->
    <ul class="nav nav-tabs mb-4" id="dashboardTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="charts-tab" data-bs-toggle="tab" data-bs-target="#charts" type="button" role="tab" aria-controls="charts" aria-selected="true">
                <i class="bi bi-bar-chart-line me-1"></i> Gráficos
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="rawdata-tab" data-bs-toggle="tab" data-bs-target="#rawdata" type="button" role="tab" aria-controls="rawdata" aria-selected="false">
                <i class="bi bi-table me-1"></i> Dados Brutos
            </button>
        </li>
    </ul>
    
    <!-- Tab Content -->
    <div class="tab-content mb-4" id="dashboardTabContent">
        <!-- Charts Tab -->
        <div class="tab-pane fade show active" id="charts" role="tabpanel" aria-labelledby="charts-tab">            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm border-left-primary chart-card">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0 text-primary">
                                    <i class="bi bi-water me-2"></i>Altura das Ondas
                                </h5>
                                <div class="chart-tools">
                                    <i class="bi bi-info-circle text-muted" data-bs-toggle="tooltip" title="Medições de altura das ondas em metros"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container dashboard-chart">
                                <div id="waveHeightChart"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm border-left-info chart-card">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0 text-info">
                                    <i class="bi bi-compass me-2"></i>Direção do Vento
                                </h5>
                                <div class="chart-tools">
                                    <i class="bi bi-info-circle text-muted" data-bs-toggle="tooltip" title="Direção do vento em graus"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container dashboard-chart">
                                <div id="windDirectionChart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm border-left-success chart-card">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0 text-success">
                                    <i class="bi bi-thermometer-half me-2"></i>Temperatura do Mar
                                </h5>
                                <div class="chart-tools">
                                    <i class="bi bi-info-circle text-muted" data-bs-toggle="tooltip" title="Temperatura da água em graus Celsius"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container dashboard-chart">
                                <div id="temperatureChart"></div>
                            </div>
                        </div>
                    </div>
                </div>                <div class="col-md-6">
                    <div class="card h-100 shadow-sm border-left-warning chart-card">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0 text-warning">
                                    <i class="bi bi-wind me-2"></i>Velocidade do Vento
                                </h5>
                                <div class="chart-tools">
                                    <i class="bi bi-info-circle text-muted" data-bs-toggle="tooltip" title="Velocidade do vento em metros por segundo"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container dashboard-chart">
                                <div id="windSpeedChart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
          <!-- Raw Data Tab -->
        <div class="tab-pane fade" id="rawdata" role="tabpanel" aria-labelledby="rawdata-tab">
            <div class="card shadow-sm">
                <div class="card-header bg-light text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-table me-2"></i>
                            Dados Oceânicos Brutos
                        </h5>
                        <div class="data-stats">
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-database me-1"></i>
                                @Model.Summary.DataPointsCount registos
                            </span>
                            <span class="badge bg-light text-dark ms-1">
                                <i class="bi bi-geo-alt me-1"></i>
                                @Model.Summary.StationsCount estações
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">                    <!-- Data Statistics Summary -->
                    <div class="row g-0 border-bottom">
                        <!-- Metrics removed as requested -->
                    </div>

                    <!-- Table Controls -->
                    <div class="table-controls p-3 bg-light border-bottom">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" class="form-control" id="tableSearch" placeholder="Pesquisar dados...">
                                </div>
                            </div>
                            <div class="col-md-6 text-end">                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-outline-primary" onclick="refreshTableData()">
                                        <i class="bi bi-arrow-clockwise me-1"></i>Atualizar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Data Table -->
                    <div class="table-responsive" style="max-height: 600px;">
                        <table class="table table-sm table-hover mb-0" id="oceanDataTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th class="sort-header" data-sort="timestamp">
                                        <i class="bi bi-clock me-1"></i>Timestamp
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                    <th class="sort-header" data-sort="station">
                                        <i class="bi bi-geo-alt me-1"></i>Estação
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                    <th class="sort-header" data-sort="sensor">
                                        <i class="bi bi-cpu me-1"></i>Sensor
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                    <th class="sort-header text-end" data-sort="wave-height">
                                        <i class="bi bi-water me-1"></i>Altura Ondas (m)
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                    <th class="sort-header text-end" data-sort="wave-period">
                                        <i class="bi bi-arrow-repeat me-1"></i>Período (s)
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                    <th class="sort-header text-end" data-sort="wind-speed">
                                        <i class="bi bi-wind me-1"></i>Vento (nós)
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                    <th class="sort-header text-end" data-sort="wind-direction">
                                        <i class="bi bi-compass me-1"></i>Direção
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                    <th class="sort-header text-end" data-sort="temperature">
                                        <i class="bi bi-thermometer me-1"></i>Temp. (°C)
                                        <i class="bi bi-chevron-expand sort-icon"></i>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="dataTableBody">
                                @foreach (var item in Model.OceanData.OrderByDescending(d => d.Timestamp).Take(200))
                                {                                    <tr class="data-row">
                                        <td class="timestamp-cell">
                                            <div class="d-flex flex-column">
                                                <span class="fw-medium">@item.Timestamp.ToString("dd/MM/yyyy")</span>
                                                <small class="text-muted">@item.Timestamp.ToString("HH:mm:ss")</small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@item.StationId</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@item.SensorId</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="value-display @(item.WaveHeight > 3 ? "text-danger fw-bold" : item.WaveHeight > 1.5 ? "text-warning" : "text-primary")">
                                                <i class="bi bi-water me-1 small"></i>@item.WaveHeight.ToString("F2")
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <span class="value-display text-primary">@item.WavePeriod.ToString("F1")</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="value-display @(item.WindSpeed > 25 ? "text-danger fw-bold" : item.WindSpeed > 15 ? "text-warning" : "text-warning")">
                                                <i class="bi bi-wind me-1 small"></i>@item.WindSpeed.ToString("F1")
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <div class="d-flex align-items-center justify-content-end">
                                                <span class="value-display text-info me-2">
                                                    <i class="bi bi-compass me-1 small"></i>@item.WindDirection.ToString("F0")°
                                                </span>
                                                <i class="bi bi-arrow-up direction-indicator text-info" style="transform: rotate(@(item.WindDirection)deg);"></i>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <span class="value-display @(item.SeaTemperature > 25 ? "text-danger" : item.SeaTemperature < 15 ? "text-info" : "text-success")">
                                                <i class="bi bi-thermometer-half me-1 small"></i>@item.SeaTemperature.ToString("F1")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Table Footer with Pagination Info -->
                    <div class="table-footer p-3 bg-light border-top">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    Exibindo @Math.Min(200, Model.OceanData.Count) de @Model.OceanData.Count registos                                    @if (Model.OceanData.Count > 200)
                                    {
                                        <span class="text-info">• Use os filtros para ver todos os dados</span>
                                    }
                                </small>
                            </div>
                            <div class="col-md-6 text-end">
                                <small class="text-muted">
                                    <i class="bi bi-clock-history me-1"></i>
                                    Última atualização: <span id="tableLastUpdate">@DateTime.Now.ToString("HH:mm:ss")</span>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicialização do Dashboard
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🌊 Inicializando Ocean Dashboard...');

            // Carregar dados quando a página estiver pronta
            setTimeout(() => {
                if (typeof window.loadDashboardData === 'function') {
                    window.loadDashboardData();
                } else {
                    console.error('❌ Funções do dashboard não encontradas');
                }
            }, 500);
        });
    </script>
    <style>
        /* Enhanced Dashboard Styles */
        .dashboard-chart {
            min-height: 350px;
            height: 370px;
            max-height: 400px;
            width: 100%;
            position: relative;
            border-radius: 0.5rem;
        }
        
        .dashboard-chart > div {
            width: 100% !important;
            height: 100% !important;
        }
        
        /* Advanced Pattern Styles */
        .pattern-list {
            max-height: 450px;
            overflow-y: auto;
            padding: 0.5rem;
        }
        
        .list-group-item {
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(0,0,0,0.05);
            border-radius: 0.75rem !important;
            margin-bottom: 0.75rem;
            padding: 1.25rem;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }
        
        .list-group-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            background: white;
        }
        
        .pattern-item {
            border-left: 5px solid var(--primary-color);
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
        }
        
        .pattern-item.trend-pattern { 
            border-left-color: #3b82f6;
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(99, 102, 241, 0.05) 100%);
        }
        
        .pattern-item.cycle-pattern { 
            border-left-color: #8b5cf6;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(168, 85, 247, 0.05) 100%);
        }
        
        .storm-item {
            border-left: 5px solid #f59e0b;
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.05) 0%, rgba(251, 146, 60, 0.05) 100%);
        }
        
        .anomaly-item {
            border-left: 5px solid #ef4444;
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.05) 0%, rgba(248, 113, 113, 0.05) 100%);
        }
        
        .anomaly-item.significant {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(248, 113, 113, 0.1) 100%);
            border-left-color: #dc2626;
            box-shadow: 0 0 20px rgba(239, 68, 68, 0.1);
        }
        
        .intensity-bar {
            display: inline-block;
            width: 10px;
            height: 18px;
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            margin-right: 3px;
            border-radius: 2px;
            box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);
        }
        
        .severity-indicator {
            padding: 0.4rem 0.8rem;
            border-radius: 1.5rem;
            font-weight: 700;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }
        
        .severity-indicator.low { 
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); 
            color: white; 
        }
        .severity-indicator.moderate-low { 
